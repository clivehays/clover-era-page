    <script>
        // Mobile menu toggle
        const mobileToggle = document.getElementById('mobileToggle');
        const navLinks = document.getElementById('navLinks');
        
        mobileToggle?.addEventListener('click', function() {
            navLinks.classList.toggle('active');
            mobileToggle.classList.toggle('active');
        });

        // Assessment Logic
        let currentQuestion = 1;
        const totalQuestions = 12;
        const answers = {};

        // Handle single-select answers
        document.querySelectorAll('.answer-option').forEach(option => {
            option.addEventListener('click', function() {
                const section = this.closest('.question-section');
                section.querySelectorAll('.answer-option').forEach(opt => {
                    opt.classList.remove('selected');
                });
                this.classList.add('selected');
                
                const questionNum = section.dataset.question;
                answers[questionNum] = this.dataset.value;
                
                // Enable next button
                section.querySelector('.btn-next').disabled = false;
            });
        });

        // Handle scale questions
        document.querySelectorAll('.scale-option').forEach(option => {
            option.addEventListener('click', function() {
                const section = this.closest('.question-section');
                section.querySelectorAll('.scale-option').forEach(opt => {
                    opt.classList.remove('selected');
                });
                this.classList.add('selected');
                
                const questionNum = section.dataset.question;
                answers[questionNum] = this.dataset.value;
                
                // Enable next button
                section.querySelector('.btn-next').disabled = false;
            });
        });

        // Handle multi-select questions
        document.querySelectorAll('.multi-option').forEach(option => {
            option.addEventListener('click', function() {
                this.classList.toggle('selected');
                
                const section = this.closest('.question-section');
                const questionNum = section.dataset.question;
                
                // Collect all selected values
                const selected = [];
                section.querySelectorAll('.multi-option.selected').forEach(opt => {
                    selected.push(opt.dataset.value);
                });
                
                answers[questionNum] = selected;
                
                // Enable next button if at least one is selected
                section.querySelector('.btn-next').disabled = selected.length === 0;
            });
        });

        function updateProgress() {
            const progress = (currentQuestion / totalQuestions) * 100;
            document.getElementById('progressBar').style.width = progress + '%';
            document.getElementById('progressText').textContent = 
                currentQuestion <= totalQuestions ? 
                `Question ${currentQuestion} of ${totalQuestions}` : 
                'Complete!';
        }

        function nextQuestion() {
            // Hide current question
            document.querySelector('.question-section.active')?.classList.remove('active');
            document.querySelector('.contact-section.active')?.classList.remove('active');
            
            currentQuestion++;
            
            // For demo, skip questions 6-11 and go straight to contact form
            if (currentQuestion === 6) {
                document.querySelector('.contact-section').classList.add('active');
                document.getElementById('progressBar').style.width = '100%';
                document.getElementById('progressText').textContent = 'Almost done!';
            } else if (currentQuestion <= 5) {
                // Show next question
                document.querySelector(`[data-question="${currentQuestion}"]`).classList.add('active');
                updateProgress();
            }
        }

        function previousQuestion() {
            // Handle going back from contact form
            if (document.querySelector('.contact-section.active')) {
                document.querySelector('.contact-section').classList.remove('active');
                currentQuestion = 5;
                document.querySelector(`[data-question="${currentQuestion}"]`).classList.add('active');
                updateProgress();
                return;
            }
            
            // Hide current question
            document.querySelector('.question-section.active')?.classList.remove('active');
            
            currentQuestion--;
            
            // Show previous question
            document.querySelector(`[data-question="${currentQuestion}"]`).classList.add('active');
            updateProgress();
        }

        // Handle form submission
        document.getElementById('assessmentForm')?.addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Collect form data
            const formData = new FormData(this);
            Object.keys(answers).forEach(key => {
                formData.append(key, answers[key]);
            });
            
            // Hide contact form and show results
            document.querySelector('.contact-section').classList.remove('active');
            document.querySelector('.results-section').classList.add('active');
            
            // Hide progress bar
            document.querySelector('.progress-container').style.display = 'none';
            document.querySelector('.progress-text').style.display = 'none';
            
            // Simulate sending data (in production, this would be an actual API call)
            console.log('Assessment data:', Object.fromEntries(formData));
        });
    </script>
</body>
</html>
